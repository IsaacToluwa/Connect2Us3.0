<?xml version="1.0" encoding="utf-8"?>
<!--
  Production Web.config transformation file for Book2Us application
  This file contains settings for production deployment
-->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  
  <!-- Connection Strings - Update for production SQL Server -->
  <connectionStrings>
    <!-- Replace LocalDB with production SQL Server -->
    <add name="Book2UsContext" 
         connectionString="Data Source=YOUR_PRODUCTION_SERVER;Initial Catalog=Book2UsDB;Integrated Security=False;User ID=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;MultipleActiveResultSets=True;"
         providerName="System.Data.SqlClient"
         xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
  </connectionStrings>
  
  <!-- Application Settings -->
  <appSettings>
    <!-- Disable debug mode -->
    <add key="webpages:Version" value="3.0.0.0" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="webpages:Enabled" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="ClientValidationEnabled" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
  </appSettings>
  
  <!-- System Web Settings -->
  <system.web>
    <!-- Disable debug mode in production -->
    <compilation debug="false" targetFramework="4.7.2" xdt:Transform="SetAttributes" />
    
    <!-- Custom Errors - Show friendly error pages -->
    <customErrors mode="On" defaultRedirect="~/Error/General">
      <error statusCode="404" redirect="~/Error/NotFound" />
      <error statusCode="500" redirect="~/Error/ServerError" />
    </customErrors>
    
    <!-- Session Settings -->
    <sessionState mode="InProc" cookieless="false" timeout="30" />
    
    <!-- Security Settings -->
    <httpRuntime targetFramework="4.7.2" 
                 enableVersionHeader="false"
                 maxRequestLength="102400" 
                 executionTimeout="3600" />
  </system.web>
  
  <!-- System Web Server Settings -->
  <system.webServer>
    <!-- Security Headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Request Filtering -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="104857600" /> <!-- 100MB -->
        <fileExtensions allowUnlisted="true">
          <add fileExtension=".asp" allowed="false" />
          <add fileExtension=".aspx" allowed="false" />
          <add fileExtension=".config" allowed="false" />
        </fileExtensions>
      </requestFiltering>
    </security>
    
    <!-- Static Content Compression -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
    </staticContent>
    
    <!-- URL Rewrite Rules (if needed) -->
    <rewrite>
      <rules>
        <!-- Force HTTPS -->
        <rule name="Force HTTPS" enabled="true">
          <match url="(.*)" ignoreCase="false" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" appendQueryString="true" redirectType="Permanent" />
        </rule>
        
        <!-- Remove trailing slash -->
        <rule name="RemoveTrailingSlashRule1" enabled="true" stopProcessing="true">
          <match url="(.*)/$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Redirect" url="{R:1}" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
  
  <!-- Entity Framework Settings -->
  <entityFramework>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
    <!-- Disable initialization in production -->
    <contexts>
      <context type="book2us.Models.Book2UsContext, book2us">
        <databaseInitializer type="System.Data.Entity.MigrateDatabaseToLatestVersion`2[[book2us.Models.Book2UsContext, book2us], [book2us.Migrations.Configuration, book2us]], EntityFramework" />
      </context>
    </contexts>
  </entityFramework>
  
</configuration>