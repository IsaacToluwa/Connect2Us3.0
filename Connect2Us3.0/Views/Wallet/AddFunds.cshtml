@{
    ViewBag.Title = "Add Funds";
}

<h2>Add Funds</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enter the amount to add to your wallet</h4>
        <hr />
        
        <div class="form-group">
            <label class="control-label col-md-2" for="amount">Amount</label>
            <div class="col-md-10">
                <input type="number" name="amount" min="0.01" step="0.01" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Wallet", "Index")
</div>