<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Book2Us</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("Book2Us", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Books", "Index", "Book", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Request.IsAuthenticated)
                    {
                        // Customer-specific navigation
                        if (User.IsInRole("Customer") || string.IsNullOrEmpty(User.Identity.Name) == false)
                        {
                            <li>@Html.ActionLink("My Orders", "Index", "Order", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Wallet", "Index", "Wallet", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("My Profile", "Profile", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        
                        // Printing Services (available to all authenticated users)
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="printingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-printer"></i> Printing Services
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="printingDropdown">
                                @if (User.IsInRole("Customer") || (!User.IsInRole("Seller") && !User.IsInRole("Employee") && !User.IsInRole("Admin")))
                                {
                                    <li>@Html.ActionLink("Request Printing", "Create", "PrintingRequest", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("My Printing Orders", "PrintingOrders", "Order", new { area = "" }, new { @class = "dropdown-item" })</li>
                                }
                                @if (User.IsInRole("Seller"))
                                {
                                    <li>@Html.ActionLink("Create Printing Request", "Create", "PrintingRequest", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("My Printing Requests", "Index", "PrintingRequest", new { area = "" }, new { @class = "dropdown-item" })</li>
                                }
                                @if (User.IsInRole("Employee"))
                                {
                                    <li>@Html.ActionLink("Process Printing Orders", "PrintingOrders", "Employee", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Delivery Assignments", "DeliveryAssignments", "Employee", new { area = "" }, new { @class = "dropdown-item" })</li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>@Html.ActionLink("All Printing Orders", "PrintingOrders", "Employee", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Printing Analytics", "PrintingAnalytics", "Admin", new { area = "" }, new { @class = "dropdown-item" })</li>
                                }
                            </ul>
                        </li>
                        
                        // Seller-specific navigation
                        if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="sellerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Seller Tools
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="sellerDropdown">
                                    <li>@Html.ActionLink("Dashboard", "Index", "Seller", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Book Orders", "Index", "Order", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>@Html.ActionLink("Manage Books", "Index", "Book", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        }
                        
                        // Employee-specific navigation
                        if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="employeeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Employee Tools
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="employeeDropdown">
                                    <li>@Html.ActionLink("Dashboard", "Index", "Employee", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Print Orders", "Index", "Order", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        }
                        
                        // Admin-specific navigation
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Panel
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>@Html.ActionLink("Dashboard", "Index", "Admin", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Manage Users", "Users", "Admin", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Manage Orders", "Orders", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                    <li>@Html.ActionLink("System Settings", "Settings", "Admin", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        }
                        
                        // Banking services (available to authenticated users)
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="bankingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Banking
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="bankingDropdown">
                                <li>@Html.ActionLink("My Accounts", "Index", "Banking", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Add Bank Account", "AddBankAccount", "Banking", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Manage Cards", "Cards", "Banking", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li><hr class="dropdown-divider"></li>
                                <li>@Html.ActionLink("Withdrawal History", "WithdrawalHistory", "Wallet", new { area = "" }, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Book2Us</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <script>
        // Ensure dropdowns work properly with Bootstrap 5
        document.addEventListener('DOMContentLoaded', function() {
            try {
                // Initialize all dropdowns
                var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
                var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                    return new bootstrap.Dropdown(dropdownToggleEl);
                });
                
                console.log('Bootstrap 5 dropdown initialization complete');
                console.log('Found dropdown elements:', dropdownElementList.length);
                
                // Test dropdown functionality
                document.querySelectorAll('.dropdown-toggle').forEach(function(toggle) {
                    toggle.addEventListener('click', function(e) {
                        console.log('Dropdown clicked:', e.target);
                    });
                });
                
            } catch (error) {
                console.error('Error initializing dropdowns:', error);
            }
        });
    </script>
</body>
</html>
