@model book2us.Models.ShoppingCart

@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            Book Title
        </th>
        <th>
            Quantity
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.CartItems)
{
    <tr>
        <td>
            @item.Book.Title
        </td>
        <td>
            @item.Quantity
        </td>
        <td>
            @string.Format("{0:c}", item.Book.Price * item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Remove", "RemoveFromCart", new { id = item.BookId })
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Checkout", "Checkout", "ShoppingCart")
</p>