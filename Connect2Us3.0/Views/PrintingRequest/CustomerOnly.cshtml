@{
    ViewBag.Title = "Customer Only Service";
}

<div class="mt-5 container">
    <div class="justify-content-center row">
        <div class="col-md-8">
            <div class="shadow card">
                <div class="bg-warning text-dark card-header">
                    <h4 class="mb-0">
                        <i class="me-2 bi bi-exclamation-triangle-fill"></i>
                        Customer Only Service
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">Only Customers Can Create Printing Requests</h5>
                        <p class="mb-3">
                            This printing service is exclusively available to customers. Based on your account type, 
                            you do not have permission to create printing requests.
                        </p>
                        <hr>
                        <p class="mb-2">
                            <strong>Your current role:</strong> 
                            <span class="bg-secondary badge">@ViewBag.CurrentRole</span>
                        </p>
                        <p class="mb-3">
                            <strong>Available to:</strong> 
                            <span class="bg-success badge">Customers</span>
                        </p>
                        
                        @if (ViewBag.CurrentRole == "Guest" || string.IsNullOrEmpty(ViewBag.CurrentRole))
                        {
                            <div class="mt-3">
                                <p>Would you like to register as a customer?</p>
                                <a href="@Url.Action("Register", "Account", new { Role = "Customer" })" class="me-2 btn btn-primary">
                                    <i class="me-1 bi bi-person-plus"></i>
                                    Register as Customer
                                </a>
                                <a href="@Url.Action("Login", "Account")" class="btn-outline-primary btn">
                                    <i class="bi-box-arrow-in-right me-1 bi"></i>
                                    Login
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="mt-3">
                                <p>If you need printing services, please contact customer support or log in with a customer account.</p>
                                <a href="@Url.Action("Index", "Home")" class="me-2 btn btn-primary">
                                    <i class="me-1 bi bi-house"></i>
                                    Return to Home
                                </a>
                                <a href="@Url.Action("Dashboard", "Account")" class="btn-outline-secondary btn">
                                    <i class="me-1 bi bi-speedometer2"></i>
                                    Go to Dashboard
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="text-muted card-footer">
                    <small>
                        <i class="me-1 bi bi-info-circle"></i>
                        Need help? Contact our support team for assistance.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    .badge {
        font-size: 0.9em;
    }
</style>