@model book2us.Models.PrintingRequest

@{
    ViewBag.Title = "Update Printing Request Status";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Update Status</h2>
                </div>
                <div class="card-body">
                    <h4>Printing Request #@Model.PrintingRequestId</h4>
                    <hr />
                    
                    <dl class="row">
                        <dt class="col-sm-4">Book ID:</dt>
                        <dd class="col-sm-8">@Model.BookId</dd>
                        
                        <dt class="col-sm-4">Quantity:</dt>
                        <dd class="col-sm-8">@Model.Quantity</dd>
                        
                        <dt class="col-sm-4">Current Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Status</span>
                        </dd>
                        
                        <dt class="col-sm-4">Request Date:</dt>
                        <dd class="col-sm-8">@Model.RequestDate.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>
                    
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.PrintingRequestId)
                        
                        <div class="form-group mb-3">
                            <label for="status" class="form-label">New Status</label>
                            @Html.DropDownList("status", (SelectList)ViewBag.StatusList, "-- Select Status --", new { @class = "form-control", required = "required" })
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="additionalInfo" class="form-label">Additional Information (Optional)</label>
                            <textarea name="additionalInfo" class="form-control" rows="3" 
                                      placeholder="Add any additional information about the status change..."></textarea>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Update Status</button>
                        </div>
                    }
                    
                    <div class="text-center mt-3">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
        border-bottom: none;
    }
    
    .card-header h2 {
        margin: 0;
        font-weight: 600;
    }
    
    .card-body {
        padding: 2rem;
    }
    
    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 0.75rem;
    }
    
    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
        border-radius: 5px;
        padding: 0.75rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #0056b3, #004085);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,123,255,0.3);
    }
    
    dt {
        font-weight: 600;
        color: #495057;
    }
    
    dd {
        margin-bottom: 0.5rem;
    }
</style>