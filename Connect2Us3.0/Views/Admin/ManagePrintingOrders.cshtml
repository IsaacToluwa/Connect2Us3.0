@model IEnumerable<book2us.Models.PrintingRequest>

@{
    ViewBag.Title = "Manage Printing Orders";
}

<h2>Manage Printing Orders</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Book</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Request Date</th>
            <th>Delivery Required</th>
            <th>Assigned Employee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PrintingRequestId</td>
                <td>@(item.User?.UserName ?? "N/A")</td>
                <td>@(item.Book?.Title ?? "N/A")</td>
                <td>@item.Quantity</td>
                <td>
                    <span class="badge badge-@(item.Status == "Completed" ? "success" : item.Status == "Pending" ? "warning" : "info")">
                        @item.Status
                    </span>
                </td>
                <td>@item.RequestDate.ToString("MM/dd/yyyy")</td>
                <td>
                    @if (item.RequiresDelivery)
                    {
                        <span class="badge badge-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">No</span>
                    }
                </td>
                <td>@(item.AssignedEmployee?.UserName ?? "Not Assigned")</td>
                <td>
                    @if (item.RequiresDelivery && item.Status == "Processing" && item.AssignedEmployeeId == null)
                    {
                        using (Html.BeginForm("AssignDelivery", "Admin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("printingRequestId", item.PrintingRequestId)
                            <div class="form-inline">
                                @Html.DropDownList("employeeId", new SelectList(ViewBag.Employees ?? new List<SelectListItem>(), "Value", "Text"), 
                                    "Select Employee", new { @class = "form-control form-control-sm", required = "required" })
                                <button type="submit" class="btn btn-sm btn-primary">Assign</button>
                            </div>
                        }
                    }
                    else if (item.RequiresDelivery && item.AssignedEmployeeId != null)
                    {
                        <span class="text-success">Assigned</span>
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    @Html.ActionLink("Back to Dashboard", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Create New Order", "CreatePrintingService", null, new { @class = "btn btn-success" })
</div>