@model IEnumerable<book2us.Models.PrintingRequest>

@{
    ViewBag.Title = "All Printing Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">All Printing Orders</h2>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Printing Orders Management</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Request ID</th>
                                    <th>Customer</th>
                                    <th>Book</th>
                                    <th>Quantity</th>
                                    <th>Status</th>
                                    <th>Request Date</th>
                                    <th>Delivery Required</th>
                                    <th>Assigned Employee</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.PrintingRequestId</td>
                                            <td>
                                                @if (item.User != null)
                                                {
                                                    @item.User.UserName
                                                }
                                                else
                                                {
                                                    @item.CustomerName
                                                }
                                            </td>
                                            <td>
                                                @if (item.Book != null)
                                                {
                                                    @item.Book.Title
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Custom PDF</span>
                                                }
                                            </td>
                                            <td>@item.Quantity</td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge badge-warning">@item.Status</span>
                                                        break;
                                                    case "Processing":
                                                        <span class="badge badge-info">@item.Status</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge badge-success">@item.Status</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="badge badge-danger">@item.Status</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">@item.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@item.RequestDate.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                @if (item.RequiresDelivery)
                                                {
                                                    <span class="badge badge-success">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.AssignedEmployee != null)
                                                {
                                                    @item.AssignedEmployee.UserName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not assigned</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (item.RequiresDelivery && item.AssignedEmployeeId == null)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#assignModal-@item.PrintingRequestId">
                                                            Assign Delivery
                                                        </button>
                                                    }
                                                    <a href="@Url.Action("Details", "PrintingRequest", new { id = item.PrintingRequestId })" class="btn btn-sm btn-info">
                                                        View Details
                                                    </a>
                                                </div>

                                                <!-- Assign Delivery Modal -->
                                                <div class="modal fade" id="assignModal-@item.PrintingRequestId" tabindex="-1" role="dialog" aria-labelledby="assignModalLabel-@item.PrintingRequestId" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="assignModalLabel-@item.PrintingRequestId">Assign Delivery Employee</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="@Url.Action("AssignDelivery", "Admin")" method="post">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="id" value="@item.PrintingRequestId" />
                                                                    <div class="form-group">
                                                                        <label for="employeeId">Select Employee:</label>
                                                                        <select name="employeeId" class="form-control" required>
                                                                            <option value="">-- Select Employee --</option>
                                                                            @if (ViewBag.Employees != null)
                                                                            {
                                                                                foreach (var employee in ViewBag.Employees)
                                                                                {
                                                                                    <option value="@employee.Value">@employee.Text</option>
                                                                                }
                                                                            }
                                                                        </select>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-primary">Assign Employee</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted">
                                            <i class="fas fa-inbox fa-3x mb-3"></i>
                                            <p>No printing orders found.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();
            
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}

@section Styles {
    <style>
        .badge {
            font-size: 0.875em;
        }
        .table th {
            border-top: none;
            font-weight: 600;
        }
        .btn-group .btn {
            margin-right: 2px;
        }
        .modal-dialog {
            margin-top: 10%;
        }
    </style>
}