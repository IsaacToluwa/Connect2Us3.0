@model IEnumerable<book2us.Models.WithdrawalRequest>

@{
    ViewBag.Title = "Withdrawal Requests";
}

<h2>Withdrawal Requests</h2>

<div class="row mb-3">
    <div class="col-md-12">
        @Html.ActionLink("Back to Dashboard", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>User</th>
            <th>Amount</th>
            <th>Fee</th>
            <th>Net Amount</th>
            <th>Status</th>
            <th>Requested Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WithdrawalRequestId</td>
                <td>@(item.User != null ? item.User.UserName : "Unknown User")</td>
                <td>@item.Amount.ToString("C")</td>
                <td>@item.Fee.ToString("C")</td>
                <td>@item.NetAmount.ToString("C")</td>
                <td>
                    <span class="badge @(item.Status == "Approved" ? "badge-success" : item.Status == "Rejected" ? "badge-danger" : "badge-warning")">
                        @item.Status
                    </span>
                </td>
                <td>@item.RequestedDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        using (Html.BeginForm("ProcessWithdrawal", "Admin", FormMethod.Post, new { @class = "form-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("withdrawalRequestId", item.WithdrawalRequestId)
                            <button type="submit" name="action" value="approve" class="btn btn-success btn-sm mr-1">Approve</button>
                            <button type="submit" name="action" value="reject" class="btn btn-danger btn-sm mr-1">Reject</button>
                            @Html.TextBox("rejectionReason", null, new { @class = "form-control form-control-sm", @placeholder = "Rejection reason (optional)" })
                        }
                    }
                    else
                    {
                        <span class="text-muted">Processed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No withdrawal requests found.
    </div>
}