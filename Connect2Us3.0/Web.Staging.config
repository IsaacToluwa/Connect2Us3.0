<?xml version="1.0" encoding="utf-8"?>
<!--
  Staging Web.config transformation file for Book2Us application
  This file contains settings for staging/testing deployment
-->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  
  <!-- Connection Strings - Update for staging SQL Server -->
  <connectionStrings>
    <!-- Replace LocalDB with staging SQL Server -->
    <add name="Book2UsContext" 
         connectionString="Data Source=YOUR_STAGING_SERVER;Initial Catalog=Book2UsDB_Staging;Integrated Security=False;User ID=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;MultipleActiveResultSets=True;"
         providerName="System.Data.SqlClient"
         xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
  </connectionStrings>
  
  <!-- Application Settings -->
  <appSettings>
    <!-- Keep debug mode enabled for staging -->
    <add key="webpages:Version" value="3.0.0.0" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="webpages:Enabled" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="ClientValidationEnabled" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
  </appSettings>
  
  <!-- System Web Settings -->
  <system.web>
    <!-- Enable debug mode for staging -->
    <compilation debug="true" targetFramework="4.7.2" xdt:Transform="SetAttributes" />
    
    <!-- Custom Errors - Show detailed errors for staging -->
    <customErrors mode="RemoteOnly" defaultRedirect="~/Error/General">
      <error statusCode="404" redirect="~/Error/NotFound" />
      <error statusCode="500" redirect="~/Error/ServerError" />
    </customErrors>
    
    <!-- Session Settings -->
    <sessionState mode="InProc" cookieless="false" timeout="30" />
    
    <!-- HTTP Runtime Settings -->
    <httpRuntime targetFramework="4.7.2" 
                 enableVersionHeader="true"
                 maxRequestLength="102400" 
                 executionTimeout="3600" />
  </system.web>
  
  <!-- System Web Server Settings -->
  <system.webServer>
    <!-- Basic Security Headers for staging -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Request Filtering -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="104857600" /> <!-- 100MB -->
      </requestFiltering>
    </security>
    
    <!-- Static Content Compression -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="01:00:00" /> <!-- 1 hour cache -->
    </staticContent>
  </system.webServer>
  
  <!-- Entity Framework Settings -->
  <entityFramework>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
    <!-- Use MigrateDatabaseToLatestVersion for staging -->
    <contexts>
      <context type="book2us.Models.Book2UsContext, book2us">
        <databaseInitializer type="System.Data.Entity.MigrateDatabaseToLatestVersion`2[[book2us.Models.Book2UsContext, book2us], [book2us.Migrations.Configuration, book2us]], EntityFramework" />
      </context>
    </contexts>
  </entityFramework>
  
</configuration>